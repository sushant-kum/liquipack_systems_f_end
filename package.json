{
  "name": "liquipack-systems-f-end",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --host 0.0.0.0 --disableHostCheck --proxy-config proxy.conf.json",

    "build_prod": "ng build --prod --aot=false --build-optimizer=false --baseHref=/ --output-path=./dist/build_prod/",
    "build_aot": "ng build --baseHref=/ --build-optimizer --aot --output-path=./dist/build_aot/",
    "build_aot_stats": "ng build --baseHref=/ --build-optimizer --aot --output-path=./dist/build_aot/ --stats-json",
    "build_aot_gzip": "ng build --baseHref=/ --build-optimizer --aot --output-path=./dist/build_aot_gzip/ && gzipper --verbose --gzip-level 9 ./dist/build_aot_gzip",

    "prepare_nginx": "sudo cp -rfv ./nginx/default /etc/nginx/sites-enabled && sudo systemctl restart nginx",
    "prepare_ng_app": "npm run build_aot_gzip && sudo cp -rfv ./dist/build_aot_gzip/* /var/www/html",
    "deploy_aot_gzip": "npm run prepare_nginx && npm run prepare_ng_app",

    "analyze_es5": "webpack-bundle-analyzer ./dist/build_aot/stats-es5.json",
    "analyze_es2015": "webpack-bundle-analyzer ./dist/build_aot/stats-es2015.json",

    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^8.2.2",
    "@angular/cdk": "^8.1.3",
    "@angular/common": "^8.2.2",
    "@angular/compiler": "^8.2.2",
    "@angular/core": "^8.2.2",
    "@angular/forms": "^8.2.2",
    "@angular/material": "^8.1.3",
    "@angular/platform-browser": "^8.2.2",
    "@angular/platform-browser-dynamic": "^8.2.2",
    "@angular/router": "^8.2.2",
    "@fortawesome/angular-fontawesome": "^0.3.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.21",
    "@fortawesome/free-brands-svg-icons": "^5.10.1",
    "@fortawesome/free-regular-svg-icons": "^5.10.1",
    "@fortawesome/free-solid-svg-icons": "^5.10.1",
    "@types/jquery": "^3.3.31",
    "angular-tslint-rules": "^1.18.0",
    "core-js": "^2.6.9",
    "hammerjs": "^2.0.8",
    "jquery": "^3.4.1",
    "moment": "^2.24.0",
    "rxjs": "~6.5.2",
    "ts-md5": "^1.2.4",
    "tslib": "^1.10.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.800.6",
    "@angular/cli": "^8.2.2",
    "@angular/compiler-cli": "^8.2.2",
    "@angular/language-service": "^8.2.2",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "^5.0.1",
    "gzipper": "^2.8.1",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^2.1.0",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.4.0",
    "ts-node": "~7.0.0",
    "tslint": "~5.11.0",
    "typescript": "~3.4.5",
    "webpack-bundle-analyzer": "^3.4.1"
  }
}
