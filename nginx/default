server {

    root /var/www/html;

    index index.html;

    server_name liquipack.cf www.liquipack.cf;

    gzip  on;
    gzip_types text/plain text/css application/json application/javascript application/x-javascript$
    gzip_static on;

    location / {
        try_files $uri $uri/ /index.html;
    }

    location /api {
        proxy_pass       http://localhost:8080;
        proxy_set_header Host      $host;
        proxy_set_header X-Real-IP $remote_addr;
    }

    listen [::]:443 ssl ipv6only=on; # managed by Certbot
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/liquipack.cf/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/liquipack.cf/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

server {
    if ($host = www.liquipack.cf) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    if ($host = liquipack.cf) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80 default_server;
    listen [::]:80 default_server;

    server_name liquipack.cf www.liquipack.cf;
    return 404; # managed by Certbot
}
